checksum=bff47cd864098be89ca941123776b2c0bde6a6456cfefb6df8f38fae102c507b

do_build() {
	make
}

do_install() {
	make install PREFIX=$DESTDIR/usr EXECPREFIX=$DESTDIR/usr/bin
	vdoc docs/manual/manual.pdf
}
